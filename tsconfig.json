{
  "compilerOptions": {
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["src/*.test.ts"],
  "include": ["./src"]
}
